<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:elevation="100dp"
    android:foregroundGravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="100dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="10dp" />


        <TextView
            android:id="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Order:121212"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/nextsTv"
            android:text="dd/MM/yyyy"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderIdTv"
            android:layout_marginStart="5dp"
            android:text="Email"
            android:textColor="@color/background2_startcolor" />

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTv"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:text="Total Amount: Rs.32" />

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTv"
            android:layout_toStartOf="@id/nextsTv"
            android:text="In Progress"
            android:textColor="@color/col_red"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/nextsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            app:tint="@color/colorPrimaryDark"
            android:contentDescription="TODO"
            android:src="@drawable/ic_next" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>